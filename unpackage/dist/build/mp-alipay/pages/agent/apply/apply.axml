<view class="apply-agent"><block a:if="{{top_background!=''}}"><view class="banner d-c-c d-c"><image src="{{top_background}}" mode="widthFix"></image></view></block><block a:if="{{!is_applying}}"><view class="form-wrap p30 f30"><view class="p30 d-c-c gray3 f40 fb">{{''+words.apply.words.title.value+''}}</view><form data-event-opts="{{[['submit',[['formSubmit',['$event']]]]]}}" onSubmit="__e" onReset="formReset"><view class="form-item border-b"><view class="field-name">邀请人</view>{{''+referee_name+''}}</view><view class="form-item border-b"><view class="field-name">姓名</view><input class="flex-1 ml20" name="name" type="text" value="" placeholder-class="grary" placeholder="请输入姓名"/></view><view class="form-item border-b"><view class="field-name">手机号</view><input class="flex-1 ml20" name="mobile" type="number" value="" placeholder-class="grary" placeholder="请输入手机"/></view><view class="d-c-c p-20-0 f28"><checkbox-group data-event-opts="{{[['change',[['changeFunc',['$event']]]]]}}" onChange="__e"><checkbox value="checkbox" checked="{{is_read}}"></checkbox></checkbox-group><text>我已阅读并了解</text><text data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="red" onTap="__e">{{'【'+words.apply.words.license.value+'】'}}</text></view><view class="d-c-c mt30"><button class="btn-red" form-type="submit">{{words.apply.words.submit.value}}</button></view></form></view></block><block a:if="{{is_applying}}"><view class="d-c-c pt30"><text class="icon iconfont icon-icon_xianshi-xian" style="font-size:100rpx;"></text></view><view class="p-30-0 d-c-c gray6 f30">{{''+words.apply.words.wait_audit.value+''}}</view><view class="p30 mt30 d-c-c"><button class="btn-red" type="primary" data-event-opts="{{[['tap',[['gotoShop',['$event']]]]]}}" onTap="__e">{{words.apply.words.goto_mall.value}}</button></view></block><popup vue-id="28a5af42-1" show="{{isPopup}}" msg="申请协议" onVueInit="__l" vue-slots="{{['default']}}"><view class="agreement-content f28 lh150">{{''+agreement+''}}</view><view class="ww100 pt20 d-c-c"><button class="btn-red" type="primary" data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" onTap="__e">我已阅读</button></view></popup></view>