<view class="shop_body"><scroll-view class="scroll-Y" style="{{('height:'+scrollviewHigh+'px;')}}" scroll-y="true" lower-threshold="50" data-event-opts="{{[['scrollToLower',[['scrolltolowerFunc',['$event']]]]]}}" onScrollToLower="__e"><view class="shop_body_l_item" a:for="{{product_list}}" a:for-item="item" a:for-index="index" a:key="index"><image src="{{item.product_image}}" image="{{true}}" data-event-opts="{{[['tap',[['goto_product',['$0'],[[['product_list','',index,'product_id']]]]]]]}}" onTap="__e"></image><view data-event-opts="{{[['tap',[['goto_product',['$0'],[[['product_list','',index,'product_id']]]]]]]}}" class="shop_body_l_item_info" onTap="__e"><view class="shop_body_l_item_info_title h1">{{item.product_name}}</view><view class="shop_body_l_item_info_price"><view class="h2 red">¥<text class="h1">{{item.product_price}}</text></view><view class="h4 huaxianjia">¥<text class="h3">{{item.line_price}}</text></view></view><view class="shop_body_l_item_info_others h3"><view class="shop_body_l_item_info_others_sales">{{"累计销量："+item.product_sales+"件"}}</view></view></view><button type="default" data-event-opts="{{[['tap',[['guanzhu',['$0'],[[['product_list','',index,'product_id']]]]]]]}}" onTap="__e">取消关注</button></view><block a:if="{{product_list.length==0&&!loading}}"><view class="d-c-c p30"><text class="iconfont icon-wushuju"></text><text class="cont">亲，暂无相关记录哦</text></view></block><block a:else><uni-load-more vue-id="4e9d35d8-1" loadingType="{{loadingType}}" onVueInit="__l"></uni-load-more></block></scroll-view></view>